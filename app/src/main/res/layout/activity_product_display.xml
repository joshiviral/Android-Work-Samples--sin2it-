<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ProductDisplayActivity">

    <ImageView
        android:id="@+id/img_item_name"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txt_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_item_name"
        android:text="Name:"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/txt_item_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_item_name"
        android:layout_toRightOf="@id/txt_item_name"
        android:paddingTop="5dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_name"
        android:text="Price:"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/txt_item_show_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_name"
        android:layout_toRightOf="@id/txt_item_price"
        android:paddingTop="5dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_item_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_price"
        android:text="Web:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_item_show_web"
        android:autoLink="web"
        android:linksClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_price"
        android:layout_toRightOf="@id/txt_item_web"
        android:paddingTop="5dp"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/txt_item_dimensions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_web"
        android:text="Dimensions:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_item_dimensions_lenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_web"
        android:layout_toRightOf="@id/txt_item_dimensions"
        android:padding="5dp"
        android:text="Lenght:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_item_show_dimensions_lenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_web"
        android:layout_toRightOf="@id/txt_item_dimensions_lenght"
        android:padding="5dp"
        android:paddingTop="5dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_item_dimensions_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_dimensions"
        android:layout_toRightOf="@id/txt_item_dimensions"
        android:paddingTop="5dp"
        android:padding="5dp"
        android:text="Width:"
        android:textSize="15dp" />

    <TextView

        android:id="@+id/txt_item_show_dimensions_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_show_dimensions_lenght"
        android:layout_toRightOf="@id/txt_item_dimensions_width"
        android:paddingTop="5dp"
        android:padding="5dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_item_dimensions_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_dimensions_width"
        android:layout_toRightOf="@id/txt_item_dimensions"
        android:text="Height:"
        android:paddingTop="5dp"
        android:padding="5dp"
        android:textSize="15dp" />

    <TextView
    android:id="@+id/txt_item_show_dimensions_height"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/txt_item_show_dimensions_width"
    android:layout_toRightOf="@id/txt_item_dimensions_height"
    android:paddingTop="5dp"
    android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_dimensions_height"
        android:text="Phone:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_item_show_phone"
        android:autoLink="phone"
        android:linksClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_dimensions_height"
        android:layout_toRightOf="@id/txt_item_phone"
        android:textSize="20dp"
        android:padding="5dp"/>

</RelativeLayout>